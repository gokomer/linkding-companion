{
    "name": "Linkding Companion",
    "description": "A simple extension for Linkding",
    "homepage_url": "https://github.com/gokomer/linkding-companion",
    "icons": {
        "16": "icons/icon-16.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },
    "browser_action": {
        "default_icon": "icons/icon-128.png",
        "default_title": "Linkding Companion"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
      },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "version": "0.1",
    "manifest_version": 2
}